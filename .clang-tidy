---
# Checks to enable - focused on style enforcement and bug prevention
Checks: >
  -*,
  bugprone-*,
  -bugprone-easily-swappable-parameters,
  clang-analyzer-*,
  cppcoreguidelines-*,
  -cppcoreguidelines-avoid-magic-numbers,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  modernize-*,
  -modernize-use-trailing-return-type,
  performance-*,
  readability-*,
  -readability-magic-numbers,
  -readability-identifier-length,
  -readability-function-cognitive-complexity

# Treat warnings as errors (set to '*' to enforce strictly)
WarningsAsErrors: ''

# Header filter - adjust to match your project structure
HeaderFilterRegex: '.*'

# Naming convention configuration
CheckOptions:
  # Class names: PascalCase
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.StructCase
    value: CamelCase

  # Public member functions: snake_case
  - key: readability-identifier-naming.PublicMethodCase
    value: lower_case

  # Public member variables: snake_case
  - key: readability-identifier-naming.PublicMemberCase
    value: lower_case

  # Private member functions: _snake_case
  - key: readability-identifier-naming.PrivateMethodCase
    value: lower_case
  - key: readability-identifier-naming.PrivateMethodPrefix
    value: '_'

  # Private member variables: _snake_case
  - key: readability-identifier-naming.PrivateMemberCase
    value: lower_case
  - key: readability-identifier-naming.PrivateMemberPrefix
    value: '_'

  # Protected member functions: _snake_case
  - key: readability-identifier-naming.ProtectedMethodCase
    value: lower_case
  - key: readability-identifier-naming.ProtectedMethodPrefix
    value: '_'

  # Protected member variables: _snake_case
  - key: readability-identifier-naming.ProtectedMemberCase
    value: lower_case
  - key: readability-identifier-naming.ProtectedMemberPrefix
    value: '_'

  # Constants: CAPS_SNAKE_CASE
  - key: readability-identifier-naming.ConstantCase
    value: PascalCase
  - key: readability-identifier-naming.ConstexprVariableCase
    value: PascalCase
  - key: readability-identifier-naming.StaticConstantCase
    value: PascalCase

  # Enum names: PascalCase
  - key: readability-identifier-naming.EnumCase
    value: CamelCase

  # Enum values: CAPS_SNAKE_CASE
  - key: readability-identifier-naming.EnumConstantCase
    value: UPPER_CASE

  # Functions (free functions): snake_case
  - key: readability-identifier-naming.FunctionCase
    value: lower_case

  # Local variables: snake_case
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.LocalVariableCase
    value: lower_case
  - key: readability-identifier-naming.ParameterCase
    value: lower_case

  # Namespaces: snake_case
  - key: readability-identifier-naming.NamespaceCase
    value: lower_case

  # Template parameters: PascalCase
  - key: readability-identifier-naming.TypeTemplateParameterCase
    value: CamelCase
  - key: readability-identifier-naming.ValueTemplateParameterCase
    value: CamelCase

  # Allow implicit bool conversions for pointers
  - key: readability-implicit-bool-conversion.AllowPointerConditions
    value: true

  # Modernization settings
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'