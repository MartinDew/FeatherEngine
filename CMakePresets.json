{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build with full debug symbols and no optimization",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "STATIC_CPP": "OFF"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with full optimization",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "development",
      "displayName": "Development",
      "description": "Development build with optimization and debug symbols",
      "inherits": [
        "default"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Development"
      }
    },
    {
      "name": "multi",
      "displayName": "Multi",
      "description": "Multi config build",
      "inherits": "default",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "windows",
      "displayName": "Windows VS",
      "description": "Multi config build for Windows with MSVC",
      "inherits": "default",
      "generator": "Visual Studio 17 2022",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolset": "ClangCL"
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Debug Build",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "configurePreset": "release"
    },
    {
      "name": "development",
      "displayName": "Development Build",
      "configurePreset": "development",
      "configuration": "Development"
    }
  ]
}