{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "include": [
        "ConanPresets.json"
    ],
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "inherits": "conan-default"
        },
        {
            "name": "multi",
            "displayName": "Multi Config",
            "description": "Multi-configuration generator (e.g. Visual Studio, Xcode)",
            "inherits": [
                "conan-default",
                "default"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "generator": "Ninja Multi-Config"
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with full debug symbols and no optimization",
            "inherits": [
                "default",
                "conan-debug"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release build with full optimization",
            "inherits": [
                "default",
                "conan-release"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "development",
            "displayName": "Development",
            "description": "Development build with optimization and debug symbols",
            "inherits": [
                "default",
                "conan-relwithdebinfo"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Development"
            }
        },
        {
            "name": "windows",
            "displayName": "Windows Debug",
            "description": "Multi config build for Windows with MSVC",
            "inherits": "debug",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug Build",
            "configurePreset": "debug",
            "configuration": "Debug",
            "inherits": "conan-debug"
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "configurePreset": "release",
            "configuration": "Release",
            "inherits": "conan-release"
        },
        {
            "name": "development",
            "displayName": "Development Build",
            "configurePreset": "development",
            "configuration": "Development",
            "inherits": "conan-relwithdebinfo"
        }
    ]
}