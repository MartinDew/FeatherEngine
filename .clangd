CompileFlags:
  # Treat code as C++
  Add: [-xc++, -Wall, -std=c++2b, -Wno-c++98-compat]

  # Include directories
  # Adjust these paths based on your actual project structure
  # Add: [
  #   -I.,
  #   -I./src,
  #   -I./godot-cpp/include,
  #   -I./godot-cpp/gen/include,
  #   -I./godot-cpp/gdextension,
  # ]

Diagnostics:
  # Tweak specific diagnostics
  Suppress:
    - unused-parameter
    - unused-variable

  # Treat warnings as errors (optional)
  # UnusedIncludes: Error
  # ClangTidy:
  #   Add: [performance-*, modernize-*]
  #   Remove: [modernize-use-trailing-return-type]

InlayHints:
  Enabled: true
  ParameterNames: true
  DeducedTypes: true

Index:
  Background: Build
  StandardLibrary: Yes
